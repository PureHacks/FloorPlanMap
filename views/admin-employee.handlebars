<div class="admin-employee container-fluid">
	<div class="row">
		<div class="employee-list col-lg-3 col-md-3 col-sm-2 col-xs-12">
			<ul class="admin-action nav nav-pills nav-stacked">
				<li><a class="btn btn-success btn-block" href="/admin/employee/add">Add Employee</a></li>
				<li><a href="/admin/employee/edit/user-name">User Name 1</a></li>
				<li><a href="/admin/employee/edit/user-name">User Name 2</a></li>
			</ul>
		</div>
		<div class="employee-details col-lg-9 col-md-9 col-sm-10 col-xs-12">
			<div class="edit-employee panel panel-default">
				<div class="panel-heading">Edit Employee Info</div>
				<div class="panel-body">
					<form role="form">
						
						<div class="form-group">
							<label for="first-name">Firstname</label>
							<input type="text" class="form-control" id="first-name" placeholder="Tim">
						</div>
						<div class="form-group">
							<label for="last-name">Lastname</label>
							<input type="text" class="form-control" id="last-name" placeholder="Ludikar">
						</div>
						<div class="form-group">
							<label for="email-address">Email Address</label>
							<input type="text" class="form-control" id="email-address" placeholder="tim.ludikar@nurun.com">
						</div>
						<div class="form-group">
							<label for="phone-extension">Phone Extension</label>
							<input type="text" class="form-control" id="phone-extension" placeholder="16000">
						</div>
						<div class="form-group">
							<label for="job-title">Job Title</label>
							<input type="text" class="form-control" id="job-title" placeholder="CEO">
						</div>
						<div class="form-group">
							<label for="clients">Clients</label>
							<input type="text" class="form-control" id="clients" placeholder="Walmart, LCBO, etc.">
						</div>
						<div class="form-group">
							<label for="spotlight-url">Spotlight URL</label>
							<input type="text" class="form-control" id="spotlight-url" placeholder="https://wiki.tor.nurun.com/display/NT/Tim+Ludikar">
						</div>
						
						<button type="submit" class="btn btn-success">Submit</button>
					</form>
				</div>
			</div>
			
		</div>
	</form>
</div>